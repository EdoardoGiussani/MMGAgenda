<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MMGAgenda.Views.MainPage"
             xmlns:vm="clr-namespace:MMGAgenda.ViewModels"
             xmlns:v="clr-namespace:MMGAgenda.Views"
             Title="MainPage">
    <ContentPage.BindingContext>
        <vm:MainViewModel/>
    </ContentPage.BindingContext>
    <Grid RowDefinitions="Auto, *">
        <Button Text="Add day" Command="{Binding AddDayCommand}" Margin="10"/>
        <CollectionView ItemsSource="{Binding Days}" Grid.Row="1">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <v:DailyView/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>