<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MMGAgenda.Views.DailyView"
             xmlns:vm="clr-namespace:MMGAgenda.ViewModels">
    <ContentView.BindingContext>
        <vm:DailyViewModel/>
    </ContentView.BindingContext>
    <VerticalStackLayout Padding="10">
        <Label Text="{Binding Date}" FontSize="Body"/>
        <CollectionView ItemsSource="{Binding Appointments}" Margin="10,0,0,5">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <HorizontalStackLayout>
                        <Label Text="00:00" Margin="0,0,10,0"/>
                        <Label Text="{Binding .}"/>
                    </HorizontalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentView>
